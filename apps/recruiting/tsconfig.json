{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./",
    "paths": {
      "@components/*": ["components/*"],
      "@sections/*": ["sections/*"],
      "@contexts/*": ["contexts/*"],
      "@enums/*": ["enums/*"],
      "@guards/*": ["guards/*"],
      "@hoc/*": ["hoc/*"],
      "@hooks/*": ["hooks/*"],
      "@layouts/*": ["layouts/*"],
      "@assets/*": ["assets/*"],
      "@services/*": ["services/*"],
      "@store": ["store/"],
      "@slices": ["slices/"],
      "@utils": ["utils/"],
      "@root/*": ["*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "types/**/*.ts",
    "sections/dashboard/social-network/post-modal/post-modal-data.ts"
  ],
  "exclude": ["node_modules"]
}
